<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".welcomePage.SecondFragment">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="456px"
            android:layout_height="456px"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="60dp"
            android:layout_toStartOf="@+id/textViewSecond"
            android:layout_toLeftOf="@+id/textViewSecond"
            android:src="@drawable/i2" />

        <TextView
            android:id="@+id/textViewSecond"
            android:layout_width="395dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="80dp"
            android:layout_marginEnd="85dp"
            android:layout_marginRight="85dp"
            android:gravity="left"
            android:padding="48px"
            android:text="@string/app_title"
            android:textSize="60px" />

        <TextView
            android:id="@+id/textViewSecond2"
            android:layout_width="395dp"
            android:layout_height="57dp"
            android:layout_below="@+id/textViewSecond"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="85dp"
            android:layout_marginRight="85dp"
            android:gravity="left"
            android:padding="48px"
            android:text="@string/app_description"
            android:textSize="48px" />

        <Button
            android:id="@+id/button2"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="121dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="40dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="30dp"
            android:background="@color/colorPrimary"
            android:text="@string/next" />

    </RelativeLayout>