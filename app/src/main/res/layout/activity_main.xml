<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v4.view.PagerTitleStrip
            android:id="@+id/pagerTitleStrip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top">
        </android.support.v4.view.PagerTitleStrip>
        <fragment android:name="slabko.vladislav.slabkovladlauncher.welcomePage.FirstFragment"
            android:id="@+id/fr1"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <fragment android:name="slabko.vladislav.slabkovladlauncher.welcomePage.SecondFragment"
            android:id="@+id/fr2"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <fragment android:name="slabko.vladislav.slabkovladlauncher.welcomePage.ThirdFragment"
            android:id="@+id/fr3"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <fragment android:name="slabko.vladislav.slabkovladlauncher.welcomePage.FourthFragment"
            android:id="@+id/fr4"
            android:layout_weight="4"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
    </android.support.v4.view.ViewPager>

</LinearLayout>