<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#607D8B</item>
        <item name="colorPrimaryDark">#455A64</item>
        <item name="colorAccent">#D500F9</item>
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="MyTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#523525</item>
        <item name="colorPrimaryDark">#45BA64</item>
        <item name="colorAccent">#D5DD59</item>
        <item name="android:windowBackground">@color/colorPrimaryDark</item>
    </style>


    <style name="AppTheme.NoActionBar">
        <item name="android:theme">@android:style/Theme.Light.NoTitleBar</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="RadioButton" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:button">@color/colorPrimary</item>
    </style>

    <color name="white">#FFFF</color>
</resources>
